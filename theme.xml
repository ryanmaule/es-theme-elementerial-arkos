<theme>
  <formatVersion>7</formatVersion>

  <include>./variables.xml</include>

  <subset name="FontSize" displayName="Font Size">
    <include name="medium">./variables-medium.xml</include>
    <include name="large">./variables-large.xml</include>
    <include name="small">./variables-small.xml</include>
  </subset>

  <!--  VARS -->
  <subset name="VideoSnapshot" displayName="Video Snapshot" appliesTo="video, elementflix">
    <include name="videoThumbnail" displayName="Thumbnail">./video-snapshot-thumb.xml</include>
    <include name="videoScreenshot" displayName="Screenshot">./video-snapshot-image.xml</include>
    <include name="videoMarquee" displayName="Marquee">./video-snapshot-marquee.xml</include>
  </subset>

  <subset name="Color scheme" displayName="Color scheme">
    <include name="banana-dark" displayName="banana-dark">./settings/colors/banana-dark.xml</include>
    <include name="banana-light" displayName="banana-light">./settings/colors/banana-light.xml</include>
    <include name="blueberry-dark" displayName="blueberry-dark">./settings/colors/blueberry-dark.xml</include>
    <include name="blueberry-light" displayName="blueberry-light">./settings/colors/blueberry-light.xml</include>
    <include name="bubblegum-dark" displayName="bubblegum-dark">./settings/colors/bubblegum-dark.xml</include>
    <include name="bubblegum-light" displayName="bubblegum-light">./settings/colors/bubblegum-light.xml</include>
    <include name="cocoa-dark" displayName="cocoa-dark">./settings/colors/cocoa-dark.xml</include>
    <include name="cocoa-light" displayName="cocoa-light">./settings/colors/cocoa-light.xml</include>
    <include name="gb-dark" displayName="Game Boy Scheme-dark">./settings/colors/extra-gameboy-dark.xml</include>
    <include name="gb-light" displayName="Game Boy Scheme-light">./settings/colors/extra-gameboy-light.xml</include>
    <include name="pikachu-dark" displayName="Pikachu Edition-dark">./settings/colors/extra-pikachu-edition-dark.xml</include>
    <include name="pikachu-light" displayName="Pikachu Edition-light">./settings/colors/extra-pikachu-edition-light.xml</include>
    <include name="redBerries-dark" displayName="Red Berries-dark">./settings/colors/extra-red-berries-dark.xml</include>
    <include name="redBerries-light" displayName="Red Berries-light">./settings/colors/extra-red-berries-light.xml</include>
    <include name="snes-dark" displayName="Snes Scheme-dark">./settings/colors/extra-snes-dark.xml</include>
    <include name="snes-light" displayName="Snes Scheme-light">./settings/colors/extra-snes-light.xml</include>
    <include name="grape-dark" displayName="grape-dark">./settings/colors/grape-dark.xml</include>
    <include name="grape-light" displayName="grape-light">./settings/colors/grape-light.xml</include>
    <include name="lime-dark" displayName="lime-dark">./settings/colors/lime-dark.xml</include>
    <include name="lime-light" displayName="lime-light">./settings/colors/lime-light.xml</include>
    <include name="mint-dark" displayName="mint-dark">./settings/colors/mint-dark.xml</include>
    <include name="mint-light" displayName="mint-light">./settings/colors/mint-light.xml</include>
    <include name="orange-dark" displayName="orange-dark">./settings/colors/orange-dark.xml</include>
    <include name="orange-light" displayName="orange-light">./settings/colors/orange-light.xml</include>
    <include name="slate-dark" displayName="slate-dark">./settings/colors/slate-dark.xml</include>
    <include name="slate-light" displayName="slate-light">./settings/colors/slate-light.xml</include>
    <include name="strawberry-dark" displayName="strawberry-dark">./settings/colors/strawberry-dark.xml</include>
    <include name="strawberry-light" displayName="strawberry-light">./settings/colors/strawberry-light.xml</include>
  </subset>

  <include>./settings/display/view-general.xml</include>
  <include>./settings/display/view-system.xml</include>

  <subset name="Ratio" displayName="Screen ratio">
    <include name="ratio32" displayName="3:2">./settings/display/view-system-32.xml</include>
    <include name="ratio43" displayName="4:3">./settings/display/view-system-43.xml</include>
    <include name="ratio53" displayName="5:3">./settings/display/view-system-53.xml</include>
    <include name="ratio11" displayName="1:1">./settings/display/view-system-11.xml</include>
  </subset>

  <include>./settings/display/view-basic.xml</include>
  <include>./settings/display/view-detailed.xml</include>
  <include>./settings/display/view-grid.xml</include>
  <include>./settings/display/view-boxes.xml</include>
  <include>./settings/display/view-video.xml</include>
  <include>./settings/display/view-elementflix.xml</include>
  <include>./settings/display/view-menu.xml</include>

  <subset name="PlayVideo" displayName="Video on carousel">
    <include name="true" displayName="Enabled">./settings/display/view-system-video.xml</include>
    <include name="false" displayName="Disabled" />
  </subset>

  <subset name="Status Bar" displayName="Status Bar">
    <include name="complete" displayName="Clock + Battery" />
    <include name="clock" displayName="Clock">./status-bar-clock.xml</include>
    <include name="battery" displayName="Battery">./status-bar-battery.xml</include>
    <include name="hidden" displayName="Hidden">./status-bar-hidden.xml</include>
  </subset>

  <subset name="Grid Game Image" displayName="Grid Game Image" appliesTo="grid">
    <include name="gridscreenshot" displayName="Screenshot" />
    <include name="gridthumbnail" displayName="Thumbnail" />
    <include name="gridlogo" displayName="Logo" />
  </subset>

  <subset name="Background Style" displayName="Background style">
    <include name="default" displayName="Default" />
    <include name="random" displayName="Random">./settings/display/randomBg.xml</include>
    <include name="custom" displayName="Custom">./settings/display/customBg.xml</include>
  </subset>

</theme>